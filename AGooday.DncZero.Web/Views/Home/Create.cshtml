                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RealName" class="col-md-6 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="RealName" class="form-control" />
                    <span asp-validation-for="RealName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Surname" class="col-md-6 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
