            <div class="form-group col-md-6">
                <label asp-for="Email" class="col-md-6 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" placeholder="dnczero@dnc.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="BirthDate" class="col-md-6 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Sex" class="col-md-6 control-label"></label>
                <div class="col-md-12">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input asp-for="Sex" type="radio" id="female" name="Sex" class="custom-control-input" value="0">
                        <label class="custom-control-label" for="female">女性</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input asp-for="Sex" type="radio" id="male" name="Sex" class="custom-control-input" value="1">
                        <label class="custom-control-label" for="male">男性</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input asp-for="Sex" type="radio" id="other" name="Sex" class="custom-control-input" value="2">
                        <label class="custom-control-label" for="other">其他</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
